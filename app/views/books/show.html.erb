<div class="ui container main">
  <h1><%= @book.title %></h1>
  <div class="ui grid">
    <div class="three column row">
      <div class="column">
        <h3>Total quantity</h3>
        <%= @book.total_quantity %>
      </div>
      <div class="column">
        <h3>Current quantity</h3>
        <%= @book.current_quantity %>
      </div>
      <div class="column">
        <% if borrow_allow?(@book) %>
            <%= button_to "Borrow", borrow_book_path, { class: 'borrow-button ui button'} %>
        <% end %>
      </div>
    </div>
  </div>
</div>


